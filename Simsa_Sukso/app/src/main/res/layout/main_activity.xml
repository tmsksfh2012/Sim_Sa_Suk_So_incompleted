<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
            android:id="@+id/main_frm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/actionBarSize"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_btmNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/main_btm_nav"
            app:itemIconTint="@drawable/main_ic_color"
            app:itemTextColor="@drawable/main_ic_color"
            app:itemTextAppearanceActive="@style/MyItemFont"
            app:itemTextAppearanceInactive="@style/MyItemFont"/>

</androidx.constraintlayout.widget.ConstraintLayout>